{
  "docTarget": "claude-code",
  "pdfDir": "pdfs",
  "concurrency": 5,
  "logLevel": "info",
  "python": {
    "executable": "./.venv/bin/python",
    "timeout": 300000
  },
  "markdown": {
    "enabled": true,
    "outputDir": "markdown",
    "includeFrontmatter": true
  },
  "markdownPdf": {
    "enabled": true,
    "batchMode": true,
    "highlightStyle": "github",
    "toc": true,
    "tocDepth": 3,
    "pdfOptions": {
      "format": "A4",
      "margin": "20mm"
    }
  }
}
